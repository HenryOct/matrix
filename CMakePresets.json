{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "Debug",
            "displayName": "Debug 调试模式",
            "description": "调试模式：无优化，包含调试符号",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0"
            }
        },
        {
            "name": "Release",
            "displayName": "Release 发布模式",
            "description": "发布模式：优化，体积小，速度快",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "displayName": "构建 Debug",
            "configurePreset": "Debug"
        },
        {
            "name": "Release",
            "displayName": "构建 Release",
            "configurePreset": "Release"
        }
    ]
}
